<div class="widget">
    <div class="widget-head">
        <div class="pull-left">添加资源</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <form action="${rc.contextPath}/resource/doadd.htm" method="post">
    <div class="widget-content">
        <table class="table table-striped table-bordered table-hover">       
            <tbody>
				<tr>
            		<td>资源名称</td> 
            		<td><input type="text" name="name"/></td>        	
            	</tr>
            	<tr>
            		<td>资源链接地址</td> 
            		<td><input type="text" name="url"/></td>        	
            	</tr>
            	<tr>
            		<td>资源级别</td> 
            		<td>           		
            		<select name="level">
            		#set($arr=[1,2,3,4])
            		#foreach($i in $arr)
            			<option>$i</option>
            			#end 
            		</select>             		      	
            		</td>        	
            	</tr>
            	<tr>
            		<td>状态</td> 
            		<td><input type="text" name="state"/></td>        	
            	</tr>
            	<tr>
            		<td>创建时间</td> 
            		<td><input type="date" name="create_time"/></td>        	
            	</tr>
            	<tr>
            		<td>修改时间</td> 
            		<td><input type="date" name="modify_time"/></td>        	
            	</tr>
            </tbody>
        </table>
        <div align="center"><input type="submit" value="添加"/></div>      
    </div>
</div>
</form>
<!-- Content ends -->

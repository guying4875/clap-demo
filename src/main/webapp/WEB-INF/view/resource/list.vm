<div class="widget">
    <div class="widget-head">
        <div class="pull-left">资源列表</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            	<tr>
            		<th>资源名称</th>
            		<th>资源链接地址</th>
            		<th>资源级别</th>
            		<th>状态</th>
            		<th>创建时间</th>
            		<th>操作</th>
            	</tr>
            </thead>
            <tbody>
            #foreach($item in $page.dataList)
				<tr>
            		  <td>${item.name}</td>
            		  <td>${item.url}</td>
            		  <td>${item.level}</td>
            		  <td>${item.state}</td>
            		  <td>$!date.format('yyyy-MM-dd',${item.createTime})</td>
            		  <td>
            		  <a href="${rc.contextPath}/resource/toupdate.htm?id=${item.id}">修改</a>
            		  <a href="${rc.contextPath}/resource/delete.htm?id=${item.id}">删除</a>
            		</td>
            	</tr>
            	#end
				<tr>
					<td colspan="6"><a href="${rc.contextPath}/resource/toAdd.htm">添加</a></td>
				</tr>

            </tbody>
        </table>
        <div class="widget-foot" style="text-align: right;">
            <!-- page index -->
            <div id="example" ></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var options = {
        currentPage: ${page.currentIndex},
        totalPages: ${page.totailPageNum},
        numberOfPages:3,
        alignment:"left",
        pageUrl:function (type, page, current ){
            return "${rc.contextPath}/resource/list.htm?index="+page;
        },
        itemTexts:function (type, page, current){
            switch (type) {
                case "first":
                    return "首页";
                case "prev":
                    return "前一页";
                case "next":
                    return "后一页";
                case "last":
                    return "尾页";
                case "page":
                    return page;
            }
        }
    }

    $('#example').bootstrapPaginator(options);
</script>

<!-- Content ends -->
